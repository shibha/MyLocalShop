<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        </style>

    <string-array name="product_names">
        <item>Balloons</item>
        <item>Scissors</item>
        <item>Tape</item>
        <item>Gum</item>
        <item>CardStock</item>
        <item>Balloon Strip</item>
        <item>Fish Wire</item>
    </string-array>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="ChipTextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="ChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/colorPrimary</item>
        <item name="android:textAppearance">@style/ChipTextAppearance</item></style>
</resources>
