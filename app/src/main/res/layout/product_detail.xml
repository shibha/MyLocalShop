<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/product_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/product_image"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/img_boundary_margin"
        android:layout_height="450dp"
        tools:context=".search.activity.ProductDetailFragment" />

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/product_name"
        android:layout_width="match_parent"
        android:textSize="@dimen/text_size"
        android:paddingLeft="@dimen/main_text_padding"
        android:paddingRight="@dimen/main_text_padding"
        android:layout_height="@dimen/label_height_detail"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:layout_margin="@dimen/small_text_margin"
        tools:context=".search.activity.ProductDetailFragment" />

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/product_price"
        android:layout_width="match_parent"
        android:layout_height="@dimen/label_height_detail"
        android:textColor="@color/colorPrimaryDark"
        android:paddingLeft="@dimen/main_text_padding"
        android:paddingRight="@dimen/main_text_padding"
        android:textStyle="bold"
        android:textSize="@dimen/text_size"
        android:layout_margin="@dimen/small_text_margin"
        tools:context=".search.activity.ProductDetailFragment" />

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/product_address"
        android:layout_width="match_parent"
        android:layout_height="@dimen/label_height"
        android:paddingLeft="@dimen/main_text_padding"
        android:paddingRight="@dimen/main_text_padding"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:textSize="@dimen/text_size"
        android:layout_margin="@dimen/small_text_margin"
        tools:context=".search.activity.ProductDetailFragment" />
</LinearLayout>